<% end %>

	<div class="container-fluid">

     <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-menu-4">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        
        <!-- タイトルなどのテキスト -->
		<% if signed_in? %>
        	<%= link_to "天然サプリメント：管理", root_path, class: "navbar-brand" %>
		<% else %>
        	<%= link_to "天然サプリメント", root_path, class: "navbar-brand" %>
		<% end %>
      </div>

      <div class="collapse navbar-collapse" id="nav-menu-4">
        <!-- 各ナビゲーションメニュー -->
        <ul class="nav navbar-nav navbar-right">

			<li><%= link_to "ホーム", root_path %></li>
